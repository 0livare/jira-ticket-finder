{
  "name": "jira-ticket-finder",
  "version": "0.0.1",
  "description": "Find Jira tickets in git commits since the last release",
  "author": "Zach Olivare <https://github.com/0livare>",
  "license": "ISC",
  "module": "index.ts",
  "main": "dist/jira",
  "type": "module",
  "bin": {
    "jira": "./dist/jira"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "jira": "bun src/main.ts",
    "build": "bun i && bun build src/main.ts --compile --outfile=dist/jira --sourcemap=inline && bun link",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "command-line-args": "^6.0.1",
    "command-line-usage": "^7.0.3",
    "glob": "^11.0.1"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/command-line-args": "^5.2.3",
    "@types/command-line-usage": "^5.0.4",
    "prettier": "^3.5.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/0livare/jira-ticket-finder.git"
  },
  "keywords": [
    "jira",
    "find",
    "ticket",
    "numbers",
    "git",
    "cli",
    "release"
  ]
}
